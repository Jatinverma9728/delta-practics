<% layout('/layouts/boilerplate.ejs') %>
<body>
  <h3>creat a new listing</h3>
  <br />
  <form method="post" action="/listings">
    <div>
      <label for="title" class="form-lable"> Title</label>
      <input
        type="text"
        name="listing[title]"
        placeholder="enter title"
        class="form-control"
      />
    </div>
    <div>
      <label for="description" class="form-lable"> Description</label>
      <textarea
        name="listing[description]"
        placeholder="enterdescription"
        class="form-control"
      ></textarea>
    </div>
    <div>
      <label for="image" class="form-lable"> Image</label>
      <input
        name="listing[image]"
        type="text"
        placeholder="enter image url"
        class="form-control"
      />
    </div>
    <div>
      <label for="price" class="form-lable"> Price</label>
      <input
        name="listing[price]"
        placeholder="enter price"
        type="number"
        class="form-control"
      />
    </div>
    <div>
      <label for="country" class="form-lable"> Country</label>

      <input
        name="listing[country]"
        placeholder="enter country"
        type="text"
        class="form-control"
      />
    </div>
    <div>
      <label for="location" class="form-lable"> Location</label>

      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
      />
    </div>
    <button>submit</button>
  </form>
</body>
