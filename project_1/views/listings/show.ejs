<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%=listing.title%></h3>
  </div>
  <div class="card col-6 show-card listing-card">
    <img
      src="<%=listing.image.url%>"
      class="card-img-top show-image"
      alt="Image"
    />
    <div class="card-body">
      <p class="card-text">
        <%=listing.description %> <br />
        <%=listing.price%> <br />
        <%=listing.location%> <br />
        <%=listing.country%>
      </p>
    </div>
  </div>
</div>
<div class="btns">
  <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1">Edit</a>

  <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-danger">Delete</button>
  </form>
</div>
<hr />
<div class="col-8 my-3">
  <h4>Leave a review</h4>
  <form
    action="/listings/<%=listing._id%>/reviews"
    method="post"
    novalidate
    class="needs-validation"
  >
    <div class="mb-3">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        id="rating"
        name="review[rating]"
        min="1"
        max="5"
        class="form-range"
      />
    </div>
    <div class="mb-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        id="comment"
        name="review[comment]"
        rows="5"
        class="form-control"
        placeholder="Comment"
        required
      ></textarea>
      <div class="invalid-feedback">Please provide a comment</div>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </div>
  </form>
  <br />
  <hr />
  <h4 class="mb-3">All Reviews (<%=listing.reviews.length%>) :</h4>

  <div class="row">
    <% for (let review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title"></h5>
        <h4>Jatin</h4>
        <p class="card-text">Comment: <%=review.comment%></p>
        <p class="card-text">Rating: <%=review.rating%></p>
        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          class="mb-3"
        >
          <button class="btn btn-sm btn-dark ">Delete</button>
        </form>
      </div>
    </div>
    <br />
    <% } %>
  </div>
  <br />
</div>
